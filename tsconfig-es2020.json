{
  "include": ["src/*", "src/redis/*"],
  "exclude": ["src/__*"],
  "compilerOptions": {
    "outDir": "es2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "target": "ES2020",
    "declaration": true,
    "useDefineForClassFields": true,
    "strict": true,

    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "maxNodeModuleJsDepth": 2
  }
}
