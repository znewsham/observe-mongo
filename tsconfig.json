{
  "include": ["src/*", "src/redis/*"],
  "exclude": ["src/__*"],
  "compilerOptions": {
    "rootDir": "src",
    "strict": true,
    "outDir": "lib",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "declaration": true,
    "stripInternal": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "resolvePackageJsonImports": true,
    "maxNodeModuleJsDepth": 2
  }
}
